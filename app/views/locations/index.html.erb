<div class="background-top fixed-top">
  <div class="d-flex justify-content-between">
    <%= image_tag('Logo.png', class: "logo") %>
    <%= image_tag('CatIcon.png', class: "cat") %>
  </div>
  <div>
    <h2 class="headers"><%= current_user.garden_name %></h2>
  </div>
</div>

<div class="location-container" style="margin-top: 7rem; margin-bottom: 2.3rem;">
  <% @locations.each do |location| %>
    <div class="card">
      <div class="card-info">
      <div>
        <%= image_tag('add-picture.svg', class: "image_location") %>
        </div>
        <div class="location-text">
          <h2 style="margin-bottom: 0px"><strong><%= location.name %></strong></h2>
          <p style="margin-bottom: 0px"> plantsðŸª´: <%= location.plants.count %></p>
          <p class="pt-3"><%= link_to "Go",location_path(location), class: "btn-normal" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>


