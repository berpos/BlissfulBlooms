<div class="container-plant">
  <div class="background-top fixed-top">
    <div class="d-flex justify-content-between">
      <%= image_tag('Logo.png', class: "logo") %>
      <%= image_tag('CatIcon.png', class: "cat") %>
    </div>
    <div class="message-container">
      <div>
        <p style="font-size: 12px;" class="mx-2 headerp">
        You can find all your locations here! Or if you would like you can create a new one ! <strong>MEOW :3 </strong>
        </p>
      </div>
    </div>
  </div>

  <!-- Button trigger modal -->
  <div class="create_plant d-flex justify-content-end mt-5">
    <a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
      <%= image_tag('catplusPNG.png', class: "create-cat grow") %>
    </a>
  </div>

  <div class="location-container" style="margin-top: 1.5rem; margin-bottom: 4rem;">
    <% @locations.each do |location| %>
      <div class="card d-flex justify-content-between">
        <div class="card-info">
        <% if location.photo.attached? %>
          <div>
          <%= cl_image_tag location.photo.key, height: 300, width: 400, crop: :fill , class: "image_location" %>
          </div>
        <% else %>
          <div>
          <%= image_tag('add-picture.svg', class: "image_location") %>
          </div>
        <% end %>
          <div class="location-text">
            <h2 style="margin-bottom: 0px"><strong><%= location.name.capitalize %></strong></h2>
            <p style="margin-bottom: 0px"> plantsðŸª´: <%= location.plants.count %></p>
            <p class="pt-3" style="z-index: 5;"><%= link_to "Go",location_path(location), class: "btn-normal" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
