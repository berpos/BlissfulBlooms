<div class="background-top" data-controller="messages">
  <div class="d-flex justify-content-between">
    <%= image_tag('Logo.png', class: "logo") %>
    <%= image_tag('CatIcon.png', class: "cat") %>
  </div>
  <div class="message-container-create"> <%# TODO: ADD RUBY AFTER WITH CONDITIONS %>
    <div>
      <p style="font-size: 14px;" class="mx-2 headerp">
        In order to treat your plant, choose your action! Don't forget to hit save!
      </p>
    </div>
</div>

<div class="container-carousel">

  <div class="carousel-card position-fixed mx-auto top-0">
    <div class="card-info-log">
      <div class="back-arrow">
        <%= link_to location_path(@location) do %>
          <i class="fa-solid fa-chevron-left"></i>
        <% end %>
      </div>
      <h2 style="text-align: center"><%= @plant.name.capitalize %> </h2>
    </div>


    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner d-flex justify-content-center">
        <div class="carousel-container ">
          <div class="carousel-item active">
            <% if @plant.level == 1 %>
              <%= image_tag('Level2.png', class: "image_plants") %>
            <% elsif @plant.level == 2 %>
              <%= image_tag('Level3.png', class: "image_plants") %>
            <% elsif @plant.level == 3 %>
              <%= image_tag('Level4.png', class: "image_plants") %>
            <% else %>
              <%= image_tag('Level1.png', class: "image_plants") %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="actions-wrapper">
        <div class="actions-box">
          <div class="card-info-drop mb-2">
            <label for="exampleFormControlFile1", style="text-align: center">What's your action?</label>
          </div>
          <div class="btn-action-group">
            <div class="btn-group" role="group" aria-label="Basic outlined example" data-controller="action-button">
              <button type="button" class="btn btn-action-card-1" data-action="click->action-button#disable" data-action-button-target="water" style="height: 4.4rem; width: 4.4rem; display: flex"> <%= image_tag('WaterCan.png', class: "btn-action-img") %></button>
              <button type="button" class="btn btn-action-card-2" data-action="click->action-button#disable" data-action-button-target="trim" style="height: 4.4rem; width: 4.4rem; display: flex"> <%= image_tag('trimmer.png', class: "btn-action-img") %></button>
              <button type="button" class="btn btn-action-card-3" data-action="click->action-button#disable" data-action-button-target="soil" style="height: 4.4rem; width: 4.4rem; display: flex"> <%= image_tag('soil_1.png', class: "btn-action-img") %></button>
            </div>
          </div>
        </div>
      </div>

      <div class="new-log-container position-absolute " ><%#TODO: change class name%>
        <div class="form-log-plant">
          <%= simple_form_for [@plant, @log] do |f| %>
            <div class="d-none">
              <%= f.input :categories, as: :radio_buttons, collection: ["water","trim","soil"] %>
            </div>
              <p style="text-align: center"><em>Today's story:</em></p>
            <%= f.input :content, label: false %>
            <%= f.submit "Save", class: "btn btn-primary-log" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
