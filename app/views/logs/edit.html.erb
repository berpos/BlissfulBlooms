<div class="background-top">
  <div class="d-flex justify-content-between">
    <%= image_tag('Logo.png', class: "logo") %>
    <%= image_tag('CatIcon.png', class: "cat") %>
  </div>
  <div>
    <h2 class="headers"></h2>
  </div>
</div>

<div class="container-carousel">

  <div class="carousel-card position-absolute top-0 end-50">
    <div class="card-info" style="gap: 1rem">
      <%= link_to location_path do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
      <h2 style="text-align: center">🪴 Plant Name 🪴</h2>
    </div>


    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner d-flex justify-content-center">
        <div class="carousel-container ">
          <div class="carousel-item active">
            <%= image_tag('potted-plant.webp', class: "carousel-img") %>
          </div>
        </div>
      </div>
      <div class="actions-wrapper">
        <div class="actions-box">
          <div class="card-info-drop mb-2">
            <label for="exampleFormControlFile1", style="text-align: center">What's your action?</label>
          </div>
          <div class="btn-action-group">
            <div class="btn-group" role="group" aria-label="Basic outlined example">
              <button type="button" class="btn btn-action-card"><%= image_tag('WaterCan.png', class: "btn-action-img") %></button>
              <button type="button" class="btn btn-action-card"><%= image_tag('trimmer.png', class: "btn-action-img") %></button>
              <button type="button" class="btn btn-action-card"><%= image_tag('soil 1.png', class: "btn-action-img") %></button>
            </div>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>

