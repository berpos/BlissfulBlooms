<div class="background-top" data-controller="messages">
  <div class="d-flex justify-content-between">
    <%= image_tag('LogoDevise.png', class: "logo-profile mt-4") %>
  </div>
</div>

<div class="user-container">
  <div class="user-profile-card">
    <div class="username-and-garden">
        <%= image_tag('CatIcon.png', class: "cat2") %>
      <h1><strong><%= current_user.username.capitalize %></strong></h1>
      <p> <strong>Garden name:</strong> <%= current_user.garden_name.capitalize  %></p>
    </div>
    <div class="plants-locations-n">
    <p> <strong>Number of plants:</strong> <%= current_user.plants.count %></p>
    <p> <strong>Number of locations:</strong> <%= current_user.locations.count %></p>
    </div>
    <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-center btn-outline" %>
  </div>

</div>
